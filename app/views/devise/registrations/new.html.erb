
<div class="container ">
  <div class="row ">
    <div class="col-lg-4"> 
    </div>
    <div class="col-lg-4">
      <%= bootstrap_devise_error_messages! %>

<div class="login-block">
  <h1><%= t('.sign_up', :default => "Sign up") %></h1>
  
  

  <div class="panel-body ">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.text_field :first_name, placeholder:"First Name", autofocus: true, id: "username",  class: "form-control" %>
      </div>
      <div class="form-group">
        
        <%= f.text_field :last_name, placeholder:"Last Name", id: "username",  class: "form-control" %>
      </div>


       <div class="form-group">
        
        <%= f.email_field :email,placeholder:"Email", autofocus: true, id: "username",  class: "form-control" %>
      </div>
      <div class="form-group">
        
        <%= f.date_field :dob, placeholder:"Date",class: "form-control" %>
      </div>
      
      <div class="form-group">
        
        <%= f.text_field :gender,placeholder:"Gender", class: "form-control" %>
      </div>
      <div class="form-group">
        
        <%= f.password_field :password, placeholder:"password" ,id: "password",  class: "form-control" %>
      </div>
      <div class="form-group">
        
        <%= f.password_field :password_confirmation, placeholder:"password",id: "password",  class: "form-control" %>
      </div>
      <%= f.submit t('.sign_up', :default => "Sign up"), class: "login-block-button" %>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>



    </div>
  </div>
</div>
